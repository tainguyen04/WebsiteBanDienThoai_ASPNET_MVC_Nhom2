@model QLCHBanDienThoaiMoi.Models.NhaCungCap

@{
    ViewData["Title"] = "Chi tiết nhà cung cấp";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết nhà cung cấp</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Thông tin nhà cung cấp</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold" width="30%">Tên nhà cung cấp:</td>
                            <td>
                                <h5 class="text-primary mb-0">@Model.TenNCC</h5>
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Địa chỉ:</td>
                            <td>@Model.DiaChi</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Số điện thoại:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.SoDienThoai))
                                {
                                    <a href="tel:@Model.SoDienThoai" class="text-decoration-none">@Model.SoDienThoai</a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Email:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list me-1"></i>Danh sách
            </a>
        </div>
    </div>
</div>