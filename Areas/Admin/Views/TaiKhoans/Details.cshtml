@model QLCHBanDienThoaiMoi.Models.TaiKhoan

@{
    ViewData["Title"] = "Chi tiết tài khoản";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="fas fa-user-circle me-2"></i>Chi tiết tài khoản</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Sửa thông tin
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-key me-2"></i>Thông tin đăng nhập</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Mã tài khoản</label>
                    <p class="form-control-plaintext fw-bold">@Model.Id</p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Tên đăng nhập</label>
                    <p class="form-control-plaintext">
                        <i class="fas fa-user me-2 text-muted"></i>@Model.TenDangNhap
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0"><i class="fas fa-cog me-2"></i>Trạng thái & Vai trò</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Vai trò</label>
                    <p class="form-control-plaintext">
                        @if (Model.VaiTro == VaiTro.Admin)
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-crown me-1"></i>Quản trị viên
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-info">
                                <i class="fas fa-user me-1"></i>Người dùng
                            </span>
                        }
                    </p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Trạng thái</label>
                    <p class="form-control-plaintext">
                        @if (Model.TrangThai == TrangThaiTaiKhoan.Active)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Hoạt động
                            </span>
                        }
                        else if (Model.TrangThai == TrangThaiTaiKhoan.Locked)
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-lock me-1"></i>Đã khóa
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-ban me-1"></i>@Model.TrangThai
                            </span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card shadow-sm mt-4">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Thao tác</h5>
    </div>
    <div class="card-body">
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Sửa thông tin
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-list me-2"></i>Danh sách tài khoản
            </a>
        </div>
    </div>
</div>