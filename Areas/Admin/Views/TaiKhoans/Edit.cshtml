@model QLCHBanDienThoaiMoi.Models.TaiKhoan
<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-4 p-3 bg-light rounded">
                <h6 class="fw-bold text-muted mb-2"><i class="fas fa-id-card me-2"></i>Thông tin tài khoản</h6>
                <div class="d-flex align-items-center">
                    <span class="badge bg-primary me-3">Mã TK: @Model.Id</span>
                    <small class="text-muted">Chỉ có thể thay đổi vai trò</small>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="VaiTro" class="form-label fw-bold">Vai trò <span class="text-danger">*</span></label>
                <select asp-for="VaiTro" class="form-select" required>
                    <option value="@VaiTro.Admin">Quản trị viên</option>
                    <option value="@VaiTro.User">Người dùng</option>
                </select>
                <span asp-validation-for="VaiTro" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                    <i class="fas fa-eye me-2"></i>Xem chi tiết
                </a>
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Cập nhật vai trò
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
