@model QLCHBanDienThoaiMoi.Models.TaiKhoan

@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="fas fa-user-plus me-2"></i>Tạo tài khoản mới</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TenDangNhap" class="form-label fw-bold">Tên đăng nhập <span class="text-danger">*</span></label>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" required />
                        <span asp-validation-for="TenDangNhap" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label fw-bold">Mật khẩu <span class="text-danger">*</span></label>
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
                        <span asp-validation-for="MatKhau" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @foreach (var item in Html.GetEnumSelectList<VaiTro>())
                            {
                                <div class="form-check py-1 w-100">
                                    <input class="form-check-input"
                                           type="radio"
                                           asp-for="VaiTro"
                                           value="@item.Value"
                                           id="pttt_@item.Value" />
                                    <label class="form-check-label w-100" for="pttt_@item.Value">
                                        @item.Text
                                    </label>
                                </div>
                            }
                            <span asp-validation-for="VaiTro" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4">
                        <h6 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Thông tin</h6>
                        <p class="mb-0 small">
                            Tài khoản sẽ tự động tạo hồ sơ <strong>Khách hàng</strong> hoặc <strong>Nhân viên</strong>
                            tương ứng dựa trên vai trò được chọn.
                        </p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Tạo tài khoản
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
