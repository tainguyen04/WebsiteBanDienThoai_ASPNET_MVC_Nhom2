@model IEnumerable<QLCHBanDienThoaiMoi.Models.TaiKhoan>

@{
    ViewData["Title"] = "Quản lý Tài khoản";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="fas fa-user-lock me-2"></i>Quản lý Tài khoản</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Tạo tài khoản
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="admin-table">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th width="200">Tên đăng nhập</th>
                        <th width="150">Vai trò</th>
                        <th width="120">Trạng thái</th>
                        <th>Người dùng</th>
                        <th width="180" class="text-center">Tùy chỉnh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.TenDangNhap</div>
                            </td>
                            <td>
                               
                                    @Html.Raw(EnumExtensions.GetBadgeHtml(item.VaiTro))
                                
                                
                            </td>
                            <td>
                                    @Html.Raw(EnumExtensions.GetBadgeHtml(item.TrangThai))
                            </td>
                            <td>
                                @if (item.NhanVien != null)
                                {
                                    <div>
                                        <span class="fw-bold">@item.NhanVien.TenNhanVien</span>
                                        <small class="text-muted d-block">Nhân viên</small>
                                    </div>
                                }
                                else if (item.KhachHang != null)
                                {
                                    <div>
                                        <span class="fw-bold">@item.KhachHang.TenKhachHang</span>
                                        <small class="text-muted d-block">Khách hàng</small>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa liên kết</span>
                                }
                            </td>
                            <td class="text-center">
                                    <div class="dropdown">
                                        <button class="btn btn-link btn-sm text-muted p-0" type="button"
                                                data-bs-toggle="dropdown" title="Thao tác" style="border: none; background: none;">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end position-absolute">
                                            <!-- Lock/Unlock -->
                                            @if (item.TrangThai == TrangThaiTaiKhoan.Locked)
                                            {
                                                <li>
                                                    <form asp-action="UnlockTaiKhoan" asp-route-id="@item.Id" method="post" class="d-inline w-100">
                                                        <button type="submit" class="dropdown-item text-success">
                                                            <i class="fas fa-unlock me-2"></i>Mở khóa
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <form asp-action="LockTaiKhoan" asp-route-id="@item.Id" method="post" class="d-inline w-100">
                                                        <button type="submit" class="dropdown-item text-warning">
                                                            <i class="fas fa-lock me-2"></i>Khóa tài khoản
                                                        </button>
                                                    </form>
                                                </li>
                                            }

                                            <!-- Reset Password -->
                                            <li>
                                                <form asp-action="ResetPassword" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    <button type="button" class="dropdown-item text-info"
                                                            onclick="confirmReset(event, this)">
                                                        <i class="fas fa-key me-2"></i>Reset mật khẩu
                                                    </button>
                                                </form>
                                            </li>
                                            <!-- Edit -->
                                            <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fas fa-edit me-2"></i>Sửa
                                                </a>
                                            </li>

                                            <!-- Details -->
                                            <li>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fas fa-eye me-2"></i>Chi tiết
                                                </a>
                                            </li>
                                            <li>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    <button type="button" class="dropdown-item text-danger" title="Xóa"
                                                            onclick="confirmDelete(event,this, '@item.TenDangNhap')">
                                                        <i class="fas fa-trash me-2"></i>Xóa
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>