@model QLCHBanDienThoaiMoi.Models.PhieuBaoHanh

@{
    ViewData["Title"] = "Chi tiết phiếu bảo hành";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary"><i class="fas fa-eye me-2"></i>Chi tiết phiếu bảo hành</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-file-contract me-2"></i>Thông tin phiếu bảo hành
            </h5>
        </div>

        <div class="card-body">
            <div class="row">

                <!-- Cột trái -->
                <div class="col-md-6">

                    <!-- Hóa đơn bán -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Mã hóa đơn</label>
                        <div class="form-control-plaintext fs-5 text-primary">
                            @Model.HoaDonBanId
                        </div>
                    </div>

                    <!-- Sản phẩm -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Sản phẩm</label>
                        <div class="form-control-plaintext text-primary">
                            @Model.ChiTietHoaDonBan?.SanPham?.TenSanPham
                        </div>
                    </div>

                    <!-- Trạng thái -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Trạng thái</label>
                        <div class="form-control-plaintext">
                            @if (Model.TrangThai == TrangThaiBaoHanh.DangBaoHanh)
                            {
                                <span class="badge bg-success">Đang bảo hành</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Hết hạn</span>
                            }
                        </div>
                    </div>

                </div>

                <!-- Cột phải -->
                <div class="col-md-6">

                    <!-- Ngày lập -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Ngày lập</label>
                        <div class="form-control-plaintext">
                            @Model.NgayLap.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <!-- Ngày hết hạn -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Ngày hết hạn</label>
                        <div class="form-control-plaintext">
                            @Model.NgayHetHan.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <!-- Số ngày còn lại -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Còn lại</label>
                        @{
                            var remaining = (Model.NgayHetHan - DateTime.Now).Days;
                        }
                        <div class="form-control-plaintext fw-bold @(remaining > 0 ? "text-success" : "text-danger")">
                            @(remaining > 0 ? $"{remaining} ngày" : "Đã hết hạn")
                        </div>
                    </div>

                </div>
            </div>

            <!-- Mô tả -->
            <div class="row">
                <div class="col-12">
                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark">Mô tả</label>
                        <div class="form-control-plaintext bg-light rounded p-3">
                            @if (!string.IsNullOrEmpty(Model.MoTa))
                            {
                                @Model.MoTa
                            }
                            else
                            {
                                <span class="text-muted">Không có mô tả</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Card thống kê & thao tác -->
    <div class="row mt-4">

        <!-- Thống kê -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Thống kê bảo hành
                    </h5>
                </div>

                <div class="card-body py-3">
                    <div class="row text-center">

                        <div class="col-md-4">
                            <div class="h5 fw-bold text-primary">@Model.NgayLap.ToString("dd/MM/yyyy")</div>
                            <div class="text-muted small">Ngày lập</div>
                        </div>

                        <div class="col-md-4">
                            <div class="h5 fw-bold text-info">@Model.NgayHetHan.ToString("dd/MM/yyyy")</div>
                            <div class="text-muted small">Ngày hết hạn</div>
                        </div>

                        <div class="col-md-4">
                            <div class="h5 fw-bold @(remaining > 0 ? "text-success" : "text-danger")">
                                @(remaining > 0 ? $"{remaining} ngày" : "0 ngày")
                            </div>
                            <div class="text-muted small">Thời gian còn lại</div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

        <!-- Thao tác -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>Thao tác
                    </h5>
                </div>

                <div class="card-body">
                    <div class="d-grid gap-2">

                        <a asp-action="Edit" asp-route-id="@Model.HoaDonBanId"
                           class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Sửa phiếu bảo hành
                        </a>

                        <a asp-action="Delete" asp-route-id="@Model.HoaDonBanId"
                           class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xóa phiếu bảo hành
                        </a>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
