@model IEnumerable<QLCHBanDienThoaiMoi.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-gold"><i class="fas fa-box me-2"></i>Quản lý Sản phẩm</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm sản phẩm mới
    </a>
</div>
<div class="modal fade" id="addSanPham">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title fw-bold">Thêm sản phẩm</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Thêm</button>
            </div>

        </div>
    </div>
</div>
<div class="admin-table">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr class="text-center">
                    <th width="100">Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th width="120">Giá bán</th>
                    <th width="110">Tồn kho</th>
                    <th width="120">Danh mục</th>
                    <th width="120">Khuyến mãi</th>
                    <th width="150">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@item.HinhAnh"
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;"
                                 alt="@item.TenSanPham">
                        </td>
                        <td>
                            <div class="fw-bold text-center overflow-hidden">@item.TenSanPham</div>
                        </td>
                        <td>
                            <div class="text-success fw-bold fst-italic text-end" style="width:max-content;">@Html.FormatPrice(item.GiaKhuyenMai)</div>
                        </td>
                        <td class="text-end">
                            <span class="badge @(item.SoLuongTon > 0 ? "bg-success" : "bg-danger")">
                                @item.SoLuongTon
                            </span>
                        </td>
                        <td class="text-center">@item.DanhMucSanPham?.TenDanhMuc</td>
                        <td class="text-end">
                            @if ((item.KhuyenMai?.GiaTri ?? 0) > 0)
                            {
                                <span class="badge bg-success text-end">@item.KhuyenMai?.GiaTri%</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary text-end">0%</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm column-gap-sm-1">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
