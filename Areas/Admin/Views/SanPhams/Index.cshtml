@model IEnumerable<QLCHBanDienThoaiMoi.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-gold"><i class="fas fa-box me-2"></i>Quản lý Sản phẩm</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm sản phẩm mới
    </a>
</div>

<div class="admin-table">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr class="text-center">
                    <th width="100">Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th width="120">Giá bán</th>
                    <th width="120">Danh mục</th>
                    <th width="120">Khuyến mãi</th>
                    <th width="150">Tùy chỉnh</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@item.HinhAnh"
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;"
                                 alt="@item.TenSanPham">
                        </td>
                        <td>
                            <div class="fw-bold text-center overflow-hidden">@item.TenSanPham</div>
                            <small class="text-muted">@item.HangSanXuat</small>
                        </td>
                        <td>
                            <div class="text-success fw-bold fst-italic text-end" style="width:max-content;">@Html.FormatPrice(item.GiaKhuyenMai)</div>
                        </td>
                        <td class="text-center">@item.DanhMucSanPham?.TenDanhMuc</td>
                        <td class="text-end">
                            @if ((item.KhuyenMai?.GiaTri ?? 0) > 0)
                            {
                                <span class="badge bg-success text-end">@item.KhuyenMai?.GiaTri%</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary text-end">0%</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-link btn-sm text-muted p-0" type="button"
                                        data-bs-toggle="dropdown" title="Thao tác" style="border: none; background: none;">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end position-absolute">
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-edit me-2"></i>Sửa
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fas fa-eye me-2"></i>Chi tiết
                                        </a>
                                    </li>
                                    <li>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="button" class="dropdown-item text-danger" title="Xóa"
                                                    onclick="confirmDelete(event,this, '@item.TenSanPham')">
                                                <i class="fas fa-trash me-2"></i>Xóa
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                                
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
