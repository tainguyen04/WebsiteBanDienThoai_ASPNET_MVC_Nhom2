@model QLCHBanDienThoaiMoi.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary"><i class="fas fa-edit me-2"></i>Chỉnh sửa sản phẩm</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="card-title mb-0">
                <i class="fas fa-edit me-2"></i>Thông tin sản phẩm
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data" method="post" class="needs-validation">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <!-- Cột trái -->
                    <div class="col-md-6">
                        <!-- Tên sản phẩm -->
                        <div class="mb-3">
                            <label asp-for="TenSanPham" class="form-label fw-bold text-dark">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="TenSanPham" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm" required />
                            <span asp-validation-for="TenSanPham" class="text-danger small"></span>
                        </div>

                        <!-- Giá nhập & Giá bán -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GiaNhap" class="form-label fw-bold text-dark">Giá nhập <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="GiaNhap" class="form-control" type="number" min="0" placeholder="0" required />
                                        <span class="input-group-text">₫</span>
                                    </div>
                                    <span asp-validation-for="GiaNhap" class="text-danger small"></span>
                                </div>
            <div class="form-group">
                <label asp-for="SoLuongTon" class="control-label"></label>
                <input asp-for="SoLuongTon" class="form-control" />
                <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GiaBan" class="form-label fw-bold text-dark">Giá bán <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="GiaBan" class="form-control" type="number" min="0" placeholder="0" required />
                                        <span class="input-group-text">₫</span>
                                    </div>
                                    <span asp-validation-for="GiaBan" class="text-danger small"></span>
                                </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
                            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label"></label>
                <input type="file" name="file" asp-for="HinhAnh" class="form-control" />
                <p>@Model.HinhAnh</p>
                <input type="hidden" asp-for="HinhAnh" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
                        </div>

                        <!-- Số lượng tồn -->
                        <div class="mb-3">
                            <label asp-for="SoLuongTon" class="form-label fw-bold text-dark">Số lượng tồn <span class="text-danger">*</span></label>
                            <input asp-for="SoLuongTon" class="form-control" type="number" min="0" placeholder="0" required />
                            <span asp-validation-for="SoLuongTon" class="text-danger small"></span>
                        </div>

                        <!-- Hãng sản xuất -->
                        <div class="mb-3">
                            <label asp-for="HangSanXuat" class="form-label fw-bold text-dark">Hãng sản xuất <span class="text-danger">*</span></label>
                            <input asp-for="HangSanXuat" class="form-control" placeholder="Nhập hãng sản xuất" required />
                            <span asp-validation-for="HangSanXuat" class="text-danger small"></span>
                        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                    </div>

                    <!-- Cột phải -->
                    <div class="col-md-6">
                        <!-- Danh mục -->
                        <div class="mb-3">
                            <label asp-for="DanhMucId" class="form-label fw-bold text-dark">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="DanhMucId" class="form-control form-select" asp-items="ViewBag.DanhMucId" required>
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="DanhMucId" class="text-danger small"></span>
                        </div>

                        <!-- Khuyến mãi -->
                        <div class="mb-3">
                            <label asp-for="KhuyenMaiId" class="form-label fw-bold text-dark">Khuyến mãi</label>
                            <select asp-for="KhuyenMaiId" class="form-control form-select" asp-items="ViewBag.KhuyenMaiId">
                                <option value="">-- Không có khuyến mãi --</option>
                            </select>
                        </div>

                        <!-- Hình ảnh -->
                        <div class="mb-3">
                            <label asp-for="HinhAnh" class="form-label fw-bold text-dark">Hình ảnh sản phẩm</label>

                            <!-- Hiển thị ảnh hiện tại -->
                            @if (!string.IsNullOrEmpty(Model.HinhAnh))
                            {
                                <div class="mb-2">
                                    <label class="form-label text-muted">Ảnh hiện tại:</label>
                                    <div>
                                        <img src="~/images/@Model.HinhAnh" alt="Ảnh sản phẩm" class="img-thumbnail" style="max-height: 150px; max-width: 100%;" />
                                        <p class="text-muted small mt-1">@Model.HinhAnh</p>
                                    </div>
                                </div>
                            }

                            <input type="file" name="file" class="form-control"
                                   accept="image/*" onchange="previewImage(this)" />
                            <input type="hidden" asp-for="HinhAnh" />

                            <div class="mt-2">
                                <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail d-none" style="max-height: 200px; max-width: 100%;" />
                            </div>
                            <span asp-validation-for="HinhAnh" class="text-danger small"></span>
                            <div class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Để trống nếu không muốn thay đổi ảnh. Chấp nhận: JPG, PNG, GIF. Kích thước tối đa: 5MB
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mô tả - Full width -->
                <div class="row">
                    <div class="col-12">
                        <div class="mb-4">
                            <label asp-for="MoTa" class="form-label fw-bold text-dark">Mô tả sản phẩm</label>
                            <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết về sản phẩm..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Nút submit -->
                <div class="d-flex gap-2 justify-content-end border-top pt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i>Cập nhật sản phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
