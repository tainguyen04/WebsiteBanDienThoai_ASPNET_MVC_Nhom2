@model QLCHBanDienThoaiMoi.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary"><i class="fas fa-eye me-2"></i>Chi tiết sản phẩm</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-info-circle me-2"></i>Thông tin sản phẩm
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Cột trái -->
                <div class="col-md-6">
                    <!-- Tên sản phẩm -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Tên sản phẩm</label>
                        <div class="form-control-plaintext fs-5 text-primary">@Model.TenSanPham</div>
                    </div>

                    <!-- Giá nhập & Giá bán -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-dark">Giá nhập</label>
                                <div class="form-control-plaintext text-success fw-bold">
                                    @Html.FormatPrice(Model.GiaNhap)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-dark">Giá bán</label>
                                <div class="form-control-plaintext text-danger fw-bold">
                                    @Html.FormatPrice(Model.GiaKhuyenMai)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Số lượng tồn -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Số lượng tồn</label>
                        <div class="form-control-plaintext">
                            <span class="badge @(Model.SoLuongTon > 0 ? "bg-success" : "bg-danger") fs-6">
                                @Model.SoLuongTon
                            </span>
                        </div>
                    </div>

                    <!-- Hãng sản xuất -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Hãng sản xuất</label>
                        <div class="form-control-plaintext">@Model.HangSanXuat</div>
                    </div>
                </div>

                <!-- Cột phải -->
                <div class="col-md-6">
                    <!-- Danh mục -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Danh mục</label>
                        <div class="form-control-plaintext">
                            @Model.DanhMucSanPham?.TenDanhMuc
                        </div>
                    </div>

                    <!-- Khuyến mãi -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Khuyến mãi</label>
                        <div class="form-control-plaintext">
                            @if (Model.KhuyenMai != null)
                            {
                                <span class="badge bg-success">@Model.KhuyenMai.TenKhuyenMai - @Model.KhuyenMai.GiaTri%</span>
                            }
                            else
                            {
                                <span class="text-muted">Không có khuyến mãi</span>
                            }
                        </div>
                    </div>

                    <!-- Hình ảnh -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Hình ảnh sản phẩm</label>
                        <div>
                            @if (!string.IsNullOrEmpty(Model.HinhAnh))
                            {
                                <img src="~/images/@Model.HinhAnh" alt="Ảnh sản phẩm"
                                     class="img-thumbnail" style="max-height: 200px; max-width: 100%;" />
                                <p class="text-muted small mt-1">@Model.HinhAnh</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mô tả - Full width -->
            <div class="row">
                <div class="col-12">
                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark">Mô tả sản phẩm</label>
                        <div class="form-control-plaintext bg-light rounded p-3">
                            @if (!string.IsNullOrEmpty(Model.MoTa))
                            {
                                @Model.MoTa
                            }
                            else
                            {
                                <span class="text-muted">Chưa có mô tả</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin bổ sung -->
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Giá khuyến mãi</label>
                        <div class="form-control-plaintext fw-bold fs-5 text-success">
                            @Html.FormatPrice(Model.GiaKhuyenMai)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark">Tiết kiệm</label>
                        <div class="form-control-plaintext fw-bold text-danger">
                            @Html.FormatPrice(Model.GiaBan - Model.GiaKhuyenMai)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card thống kê và thao tác -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Thống kê nhanh
                    </h5>
                </div>
                <div class="card-body py-3">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="h5 text-primary fw-bold">@Html.FormatPrice(Model.GiaBan)</div>
                            <div class="text-muted small">Giá gốc</div>
                        </div>
                        <div class="col-md-4">
                            <div class="h5 text-success fw-bold">@Html.FormatPrice(Model.GiaKhuyenMai)</div>
                            <div class="text-muted small">Giá KM</div>
                        </div>
                        <div class="col-md-4">
                            <div class="h5 text-danger fw-bold">@Html.FormatPrice(Model.GiaBan - Model.GiaKhuyenMai)</div>
                            <div class="text-muted small">Tiết kiệm</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>Thao tác
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-0">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Sửa sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
