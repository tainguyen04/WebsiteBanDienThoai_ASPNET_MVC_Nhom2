@model IEnumerable<QLCHBanDienThoaiMoi.Models.NhanVien>

@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="fas fa-users me-2"></i>Quản lý nhân viên</h2>
</div>
<div class="card shadow-sm">
    <div class="card-body">
        <div class="admin-table">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th width="200">Tên nhân viên</th>
                        <th width="130">Số điện thoại</th>
                        <th width="120">Tài khoản</th>
                        <th width="150" class="text-center">Tùy chỉnh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.TenNhanVien</div>
                            </td>
                            
                            <td>
                                <span class="badge bg-info">@item.SoDienThoai</span>
                            </td>
                            <td>
                                @if (item.TaiKhoan != null)
                                {
                                    <span class="badge bg-success">@item.TaiKhoan.Id</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa có TK</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-link btn-sm text-muted p-0" type="button"
                                            data-bs-toggle="dropdown" title="Thao tác" style="border: none; background: none;">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end position-absolute">
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fas fa-edit me-2"></i>Sửa
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fas fa-eye me-2"></i>Chi tiết
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>
