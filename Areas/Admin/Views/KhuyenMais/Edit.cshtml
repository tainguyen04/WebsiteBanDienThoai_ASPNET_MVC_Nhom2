@model QLCHBanDienThoaiMoi.Models.KhuyenMai

@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">
            <i class="fas fa-edit me-2"></i>Chỉnh sửa khuyến mãi
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-percentage me-2"></i>Thông tin khuyến mãi
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TenKhuyenMai" class="form-label fw-bold">Tên khuyến mãi <span class="text-danger">*</span></label>
                                    <input asp-for="TenKhuyenMai" class="form-control" placeholder="Nhập tên khuyến mãi" required />
                                    <span asp-validation-for="TenKhuyenMai" class="text-danger small"></span>
                                </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LoaiKhuyenMai" class="form-label fw-bold">Loại khuyến mãi <span class="text-danger">*</span></label>
                                    <input asp-for="LoaiKhuyenMai" class="form-control" placeholder="Nhập loại khuyến mãi" required />
                                    <span asp-validation-for="LoaiKhuyenMai" class="text-danger small"></span>
                                </div>
            <div class="form-group">
                <label asp-for="NgayBatDau" class="control-label"></label>
                <input asp-for="NgayBatDau" class="form-control" />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                            </div>
            <div class="form-group">
                <label asp-for="NgayKetThuc" class="control-label"></label>
                <input asp-for="NgayKetThuc" class="form-control" />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả khuyến mãi"></textarea>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="GiaTri" class="form-label fw-bold">Giá trị <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="GiaTri" class="form-control" type="number" min="0" max="100" placeholder="0" required />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="GiaTri" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="NgayBatDau" class="form-label fw-bold">Ngày bắt đầu <span class="text-danger">*</span></label>
                                    <input asp-for="NgayBatDau" class="form-control" type="date" required />
                                    <span asp-validation-for="NgayBatDau" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="NgayKetThuc" class="form-label fw-bold">Ngày kết thúc <span class="text-danger">*</span></label>
                                    <input asp-for="NgayKetThuc" class="form-control" type="date" required />
                                    <span asp-validation-for="NgayKetThuc" class="text-danger small"></span>
                                </div>
        </form>
                            </div>
                        </div>

                        <!-- Hiển thị trạng thái hiện tại -->
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Trạng thái hiện tại:</strong>
                            @{
                                var isUpcoming = DateTime.Now < Model.NgayBatDau;
                                var statusText = Model.HieuLuc ? "Đang diễn ra" : isUpcoming ? "Sắp diễn ra" : "Đã kết thúc";
                            }
                            <span class="badge @(Model.HieuLuc ? "bg-success" : isUpcoming ? "bg-warning" : "bg-secondary")">@statusText</span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end border-top pt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Cập nhật khuyến mãi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
