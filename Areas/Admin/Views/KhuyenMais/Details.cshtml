@model QLCHBanDienThoaiMoi.Models.KhuyenMai

@{
    ViewData["Title"] = "Chi tiết khuyến mãi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết khuyến mãi</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Thông tin khuyến mãi</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold" width="40%">Tên khuyến mãi:</td>
                            <td>@Model.TenKhuyenMai</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Mô tả:</td>
                            <td>@Model.MoTa</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Loại:</td>
                            <td><span class="badge bg-primary">@Model.LoaiKhuyenMai</span></td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold" width="40%">Giá trị:</td>
                            <td class="text-success fw-bold">@Model.GiaTri%</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Ngày bắt đầu:</td>
                            <td>@Model.NgayBatDau.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Ngày kết thúc:</td>
                            <td>@Model.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list me-1"></i>Danh sách
            </a>
        </div>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>