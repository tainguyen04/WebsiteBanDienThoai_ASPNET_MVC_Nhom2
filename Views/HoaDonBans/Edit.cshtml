@model QLCHBanDienThoaiMoi.Models.HoaDonBan

@{
    ViewData["Title"] = "Chỉnh sửa địa chỉ nhận hàng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="orderId" value="@Model.Id" />

                        <div class="mb-4 p-3 bg-light rounded">
                            <h6 class="fw-bold text-muted mb-2">
                                <i class="fas fa-receipt me-2"></i>Thông tin đơn hàng
                            </h6>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-primary me-3">Mã đơn: @Model.Id</span>
                                @Html.Raw(EnumExtensions.GetBadgeHtml(Model.TrangThai))
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Địa chỉ nhận hàng <span class="text-danger">*</span></label>
                            <textarea name="newAddress" class="form-control" rows="4"
                                      placeholder="Nhập địa chỉ nhận hàng..."
                                      required>@Model.DiaChiNhanHang</textarea>
                            <small class="text-muted">Chỉ có thể thay đổi địa chỉ khi đơn hàng chưa được giao</small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Hủy bỏ
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Cập nhật địa chỉ
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}