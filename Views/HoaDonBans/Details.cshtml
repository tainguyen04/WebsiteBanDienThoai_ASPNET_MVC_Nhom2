@model QLCHBanDienThoaiMoi.Models.HoaDonBan

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container mt-4">
    <!-- Header đơn giản -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 text-primary mb-1">
                <i class="fas fa-receipt"></i> Đơn hàng #@Model.Id
            </h1>
            <p class="text-muted mb-0">Ngày đặt: @Model.NgayBan.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <!-- Thông báo trạng thái -->
    <div class="alert alert-info d-flex align-items-center mb-4">
        <i class="fas fa-info-circle me-2 fs-5"></i>
        <div>
            <strong>Trạng thái đơn hàng:</strong>
            @Html.Raw(EnumExtensions.GetBadgeHtml(Model.TrangThai))
        </div>
    </div>

    <div class="row">
        <!-- Thông tin đơn hàng -->
        <div class="col-lg-8">
            <!-- Danh sách sản phẩm -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="fas fa-boxes me-2"></i>Sản phẩm đã đặt
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="60%">Sản phẩm</th>
                                    <th width="15%" class="text-center">Đơn giá</th>
                                    <th width="10%" class="text-center">SL</th>
                                    <th width="15%" class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ChiTietHoaDonBans != null && Model.ChiTietHoaDonBans.Any())
                                {
                                    foreach (var ct in Model.ChiTietHoaDonBans)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(ct.SanPham?.HinhAnh))
                                                    {
                                                        <img src="~/images/@ct.SanPham.HinhAnh"
                                                             alt="@ct.SanPham.TenSanPham"
                                                             class="me-3 rounded"
                                                             style="width: 50px; height: 50px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <div class="fw-bold">@ct.SanPham?.TenSanPham</div>
                                                        <small class="text-muted">Mã: @ct.SanPhamId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">@Html.FormatPrice(ct.GiaBan)</td>
                                            <td class="text-center">@ct.SoLuong</td>
                                            <td class="text-end fw-bold text-danger">
                                                @Html.FormatPrice(ct.ThanhTien)
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="fas fa-exclamation-circle"></i> Không có sản phẩm nào
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-active">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                    <td class="text-end fw-bold fs-5 text-danger">
                                        @Html.FormatPrice(Model.TongTien)
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Thông tin giao hàng -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="fas fa-truck me-2"></i>Thông tin giao hàng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Địa chỉ nhận hàng:</strong>
                            <p class="mb-2">@Model.DiaChiNhanHang</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Phương thức thanh toán:</strong>
                            <p class="mb-0">
                                @Html.Raw(EnumExtensions.GetBadgeHtml(Model.PhuongThucThanhToan))
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar thông tin -->
        <div class="col-lg-4">
            <!-- Thông tin liên hệ -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="fas fa-user me-2"></i>Thông tin liên hệ
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.KhachHang != null)
                    {
                        <p class="mb-2">
                            <strong>@Model.KhachHang.TenKhachHang</strong>
                        </p>
                        <p class="mb-2 text-muted">
                            <i class="fas fa-phone me-2"></i>@Model.KhachHang.SoDienThoai
                        </p>
                        <p class="mb-0 text-muted">
                            <i class="fas fa-envelope me-2"></i>@Model.KhachHang.Email
                        </p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Khách vãng lai</p>
                    }
                </div>
            </div>

            
        </div>
    </div>
</div>