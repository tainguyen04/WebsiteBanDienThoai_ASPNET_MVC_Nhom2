@model QLCHBanDienThoaiMoi.Models.HoaDonBan
@{
    ViewData["Title"] = "Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-white text-center py-4 border-0">
                    <h3 class="fw-bold text-primary mb-0">Chi Tiết Thanh Toán</h3>
                    <p class="text-muted mb-0">Mã hóa đơn: <strong>@Model.Id</strong></p>
                </div>

                <div class="card-body px-4 py-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-secondary">Ngày bán:</dt>
                        <dd class="col-sm-8">@Model.NgayBan.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Khách hàng:</dt>
                        <dd class="col-sm-8">@Model.KhachHang?.TenKhachHang ?? "—"</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Nhân viên xử lý:</dt>
                        <dd class="col-sm-8">@Model.NhanVien?.TenNhanVien ?? "—"</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Phương thức thanh toán:</dt>
                        <dd class="col-sm-8">
                            <select asp-for="PhuongThucThanhToan" 
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<QLCHBanDienThoaiMoi.Models.PhuongThucThanhToan>()">
                                <option value="">-- Chọn phương thức --</option>
                            </select>
                        </dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @Html.Raw(EnumExtensions.GetBadgeHtml(Model.TrangThai))
                        </dd>
                    </dl>

                    <hr class="my-4" />

                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4 text-muted">
                <small>Cảm ơn bạn đã mua hàng tại <strong>QLCHBanDienThoaiMoi</strong> 💙</small>
            </div>
        </div>
    </div>
</div>

