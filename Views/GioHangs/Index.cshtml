@model List<QLCHBanDienThoaiMoi.DTO.ChiTietGioHangDTO>
@{
    ViewData["Title"] = "Giỏ hàng";
    int stt = 1;
}

<div class="container mt-5">
    <h3 class="fw-bold text-primary mb-4">
        <i class="bi bi-cart-fill me-2"></i> Giỏ hàng của bạn
    </h3>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-bag-x fs-1 mb-2 d-block"></i>
            Giỏ hàng của bạn đang trống!
            <div class="mt-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-shop"></i> Mua sắm ngay
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th class="text-start">
                            <input type="checkbox" id="select-all" class="form-check-input me-2" />
                            <span class="small fw-semibold">Chọn tất cả</span>
                        </th>
                        <th>Hình ảnh</th>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var totalPrice = item.GiaKhuyenMai * item.SoLuong;
                        <tr>
                            <td class="text-start">
                                <input type="checkbox" class="form-check-input product-checkbox"
                                       data-total="@totalPrice" data-id="@item.SanPhamId" />
                            </td>
                            <td>@stt</td>
                            <td>
                                <img src="~/images/@item.HinhAnh"
                                     class="img-thumbnail"
                                     style="width: 60px; height: 60px; object-fit: cover;">
                            </td>
                            <td>@item.TenSanPham</td>
                            <td class="text-end">@Html.FormatPrice(item.GiaKhuyenMai)</td>
                            <td class="text-end">@item.SoLuong</td>
                            <td class="text-end fw-bold text-danger">@Html.FormatPrice(totalPrice)</td>
                            <td>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="SanPhamId" value="@item.SanPhamId" />
                                    <button type="button" class="btn btn-outline-danger"
                                            id="delete-btn"
                                            onclick="confirmDeleted(event,this,'@item.TenSanPham')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center border-top pt-3 mt-3">
            <div>
                <h6 class="mb-1">Tổng tiền sản phẩm đã chọn:</h6>
                <h5 id="selectedTotal" class="text-danger fw-bold">@Html.FormatPrice(0)</h5>
            </div>
            <form method="get" asp-action="Create" asp-controller="HoaDonBans" id="checkoutForm">
                <input type="hidden" name="selectedCartItems" id="selectedCartItems" />
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-credit-card"></i> Thanh toán
                </button>
            </form>
        </div>
    }
</div>