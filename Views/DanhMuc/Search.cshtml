@model IEnumerable<QLCHBanDienThoaiMoi.Models.DanhMucSanPham>

<h2>Tìm kiếm danh mục</h2>

<form method="get">
    <input type="text" name="keyword" value="@ViewBag.Keyword" placeholder="Nhập tên danh mục..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Tìm kiếm</button>
</form>

<hr />

@if (!Model.Any())
{
    <p>Không tìm thấy danh mục.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên danh mục</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dm in Model)
            {
                <tr>
                    <td>@dm.TenDanhMuc</td>
                </tr>
            }
        </tbody>
    </table>
}
