@model QLCHBanDienThoaiMoi.Models.KhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="fas fa-user-circle me-2"></i>Chi tiết khách hàng</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Sửa thông tin
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin cá nhân</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-muted">Mã khách hàng</label>
                        <p class="form-control-plaintext fw-bold">@Model.Id</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-muted">Tên khách hàng</label>
                        <p class="form-control-plaintext fs-5">@Model.TenKhachHang</p>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Địa chỉ</label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrEmpty(Model.DiaChi))
                        {
                            <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                            @Model.DiaChi
                        }
                        else
                        {
                            <span class="text-muted">Chưa có địa chỉ</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0"><i class="fas fa-address-card me-2"></i>Liên hệ</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Số điện thoại</label>
                    <p class="form-control-plaintext">
                        <i class="fas fa-phone me-2 text-muted"></i>
                        <span class="badge bg-primary fs-6">@Model.SoDienThoai</span>
                    </p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">Email</label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                <i class="fas fa-envelope me-2 text-muted"></i>@Model.Email
                            </a>
                        }
                        else
                        {
                            <span class="text-muted"><i class="fas fa-envelope me-2"></i>Chưa có email</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Thao tác</h5>
    </div>
    <div class="card-body">
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Sửa thông tin
            </a>
        </div>
    </div>
</div>
