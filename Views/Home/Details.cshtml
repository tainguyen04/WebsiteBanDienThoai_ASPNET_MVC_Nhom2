@model QLCHBanDienThoaiMoi.Models.SanPham

@{
    ViewData["Title"] = "Details";
}

<h2 class="card-title text-primary" style="margin-bottom:5px;">@Model.TenSanPham</h2>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <img src="~/images/@Model.HinhAnh"
                     class="img-fluid rounded"
                     style="max-height: 400px; object-fit: contain;"
                     alt="@Model.TenSanPham">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="col-6">
                    <small class="text-muted">Hãng sản xuất</small>
                    <p class="mb-2"><strong>@Model.HangSanXuat</strong></p>
                </div>
                <!-- Thông số kỹ thuật -->
                <div class="mb-4">
                    <h5 class="border-bottom pb-2">Thông số kỹ thuật</h5>
                    <div class="row">

                        @if (!string.IsNullOrEmpty(Model.MoTa))
                        {
                            <div class="mb-3">
                                <p class="card-text">@Model.MoTa</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="mb-2 border-top pb-2">
                    @if (Model.KhuyenMai.GiaTri > 0)
                    {
                        <!-- Có khuyến mãi -->
                        <div class="d-flex align-items-center gap-2 mb-2 fst-italic">
                            <h3 class="text-danger mb-0">@Html.FormatPrice(Model.GiaBan * (100 - Model.KhuyenMai.GiaTri) / 100)</h3>
                            <span class="text-muted text-decoration-line-through fs-5">@Html.FormatPrice(Model.GiaBan)</span>
                            <span class="badge bg-danger fs-6 fw-bold">-@Model.KhuyenMai.GiaTri%</span>

                        </div>
                    }
                    else
                    {
                        <!-- Không có khuyến mãi -->
                        <h3 class="text-danger mb-0 fst-italic fw-bold">@Html.FormatPrice(Model.GiaBan)</h3>
                        @if (Model.GiaNhap > 0 && Model.GiaBan < Model.GiaNhap)
                        {
                            <span class="text-muted text-decoration-line-through">@Html.FormatPrice(Model.GiaNhap)</span>
                            <span class="badge bg-success ms-2">
                                Tiết kiệm @Html.FormatPrice(Model.GiaNhap - Model.GiaBan)
                            </span>
                        }
                    }
                    <div class="text-success">
                        @if (Model.SoLuongTon > 0)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle"></i> Còn hàng (@Model.SoLuongTon sản phẩm)
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-times-circle"></i> Hết hàng
                            </span>
                        }
                    </div>
                </div>
                <!-- Nút hành động -->
                <div class="d-grid gap-2 d-md-flex">
                    @if (Model.SoLuongTon > 0)
                    {
                        <button class="btn btn-primary btn-lg flex-fill">
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                        <button class="btn btn-outline-success btn-lg">
                            <i class="fas fa-bolt"></i> Mua ngay
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg flex-fill" disabled>
                            <i class="fas fa-bell"></i> Thông báo khi có hàng
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>