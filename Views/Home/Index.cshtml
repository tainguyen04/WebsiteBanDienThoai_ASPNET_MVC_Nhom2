@model IEnumerable<QLCHBanDienThoaiMoi.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}
@section FullWidthCarousel {
    <div id="demo" class="carousel slide" data-bs-ride="carousel" style="margin-top:50px;">


        <!-- The slideshow/carousel -->
        <div class="carousel-inner text-center" >
            @{
                int index = 0;
            }
            @foreach (var sp in Model.Take(5))
            {
                <a>
                    <div class="carousel-item @(index == 0 ? "active" : "")">
                        <img src="~/images/@sp.HinhAnh"
                        class="d-block w-100"
                        style="height:250px; width:auto; object-fit:contain; background-color:#070917;"
                        alt="@sp.TenSanPham">
                    </div>
                </a>
                index++;
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    }
<h1>Index</h1>

<div class="container mt-3">
    <div class="row row-cols-md-5 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img class="card-img-top" src="~/images/@item.HinhAnh"
                        alt="@item.TenSanPham" style="height:160px;object-fit:cover;">
                    </a>

                    <div class="card-body d-flex flex-column">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"
                        class="card-title"
                        style="text-decoration:none; color:black; white-space: normal; word-wrap: break-word;">
                            @item.TenSanPham
                        </a>
                        @if ((item.KhuyenMai?.GiaTri ?? 0) > 0)
                        {
                            <h6 class="text-danger mb-0 fst-italic">@Html.FormatPrice(item.GiaKhuyenMai)</h6>
                            <div>
                                <span class="text-muted text-decoration-line-through fs-5">@Html.FormatPrice(item.GiaBan)</span>
                                <span class="text-danger fst-italic fw-bold">-@item.KhuyenMai.GiaTri%</span>
                            </div>
                            
                        }
                        else
                        {
                            <h6 class="text-danger mb-0 fst-italic fw-bold">@Html.FormatPrice(item.GiaBan)</h6>
                        }

                        <div class="mt-auto d-flex gap-2 justify-content-center">
                            <form asp-controller="GioHangs" asp-action="AddToCart" method="post">
                                <input type="hidden" name="SanPhamId" value="@item.Id" />
                                <input type="hidden" name="soLuong" value="1" />
                                <button type="submit" class="btn btn-primary flex-fill text-center" id="addtocart">
                                    <i class="fa-solid fa-cart-plus"></i> <b> Thêm vào giỏ</b>
                                </button>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <nav aria-label="Page navigation example" style="padding-top:25px;">
        <ul class="pagination justify-content-center">
            <!-- Nút Previous -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@(ViewBag.CurrentPage == 1 ? "#" : Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize }))"
                @(ViewBag.CurrentPage == 1 ? "tabindex=\"-1\" aria-disabled=\"true\"" : "")>Trang trước</a>
            </li>

            <!-- Các trang số -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                </li>
            }

            <!-- Nút Next -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "#" : Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize }))">Trang sau</a>
            </li>
        </ul>
    </nav>

</div>
