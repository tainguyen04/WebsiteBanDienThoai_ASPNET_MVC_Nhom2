<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopAmazon</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLCHBanDienThoaiMoi.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
          crossorigin="anonymous" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.23.0/sweetalert2.min.css" />
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light shadow-sm fixed-top">
        <div class="container-fluid">

            <!-- Logo -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index" style="margin-left:20px;">
                    <i class="fa-brands fa-shopify" style="color: #74C0FC;"></i>
                    ShopAmazon
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- Left Menu -->
                <ul class="navbar-nav me-auto mb-2 mb-sm-0">

                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                </ul>

                <!-- Search -->
                <form asp-controller="SanPham" asp-action="Search" method="get"
                      class="d-flex mx-auto" style="max-width: 320px;">
                    <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                    <button type="submit" class="btn btn-primary ms-2">Tìm</button>
                </form>

                <!-- User -->
                <ul class="navbar-nav ms-auto">

                    @if (User.Identity.IsAuthenticated)
                    {
                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-outline-primary dropdown-toggle d-flex align-items-center"
                                            type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user me-2"></i>
                                        <span class="me-2">@User.Identity.Name</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li class="dropdown-header">
                                            <div class="text-center">
                                                <i class="fas fa-user-circle fa-2x text-primary mb-2"></i>
                                                <h6 class="mb-0">@User.Identity.Name</h6>
                                            </div>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="KhachHangs" asp-action="Edit">
                                                <i class="fas fa-user-edit me-2"></i>Cập nhật thông tin
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="HoaDonBans" asp-action="Index">
                                                <i class="fas fa-shopping-bag me-2"></i>Đơn hàng của tôi
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                                <i class="fas fa-lock me-2"></i>Đổi mật khẩu
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a>
                        </li>
                    }

                </ul>

                <!-- Cart -->
                <a asp-controller="GioHangs" asp-action="Index"
                   class="btn btn-outline-primary ms-3 position-relative">

                    <i class="fa-solid fa-cart-shopping"></i> Giỏ Hàng

                    @if (ViewBag.soSanPham != null && ViewBag.soSanPham > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @ViewBag.soSanPham
                        </span>
                    }
                </a>

            </div>
        </div>
    </nav>
</header>

<!-- Body -->
<div style="padding-top: 90px;"></div>

@RenderSection("FullWidthCarousel", required: false)

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- Footer -->
    <footer class="bg-dark text-light mt-5 pt-5 pb-3">
        <div class="container">
            <div class="row">
                <!-- Thông tin cửa hàng -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold">QLCHBanDienThoaiMoi</h5>
                    <p class="mb-1">Địa chỉ: 123 Đường ABC, TP. XYZ</p>
                    <p class="mb-1">Hotline: 0123 456 789</p>
                    <p>Email: support@qlchdienthoai.com</p>
                </div>

                ```
                <!-- Liên kết nhanh -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold">Liên kết</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">Trang chủ</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Điều khoản</a></li>
                    </ul>
                </div>

                <!-- Mạng xã hội -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold">Theo dõi chúng tôi</h5>
                    <a href="#" class="text-light me-2 fs-5"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="text-light me-2 fs-5"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-light me-2 fs-5"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-light fs-5"><i class="fab fa-youtube"></i></a>
                </div>
            </div>

            <div class="text-center mt-3">
                &copy; 2025 ShopAmazon. All rights reserved.
            </div>
        </div>
        ```

    </footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.23.0/sweetalert2.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)

@if (TempData["ThongBao"] != null)
{
    <script>
        var ThongBao = '@Html.Raw(TempData["ThongBao"])';
    </script>
}
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            var ThongBao = '@Html.Raw(TempData["SuccessMessage"])';
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            var ThongBaoLoi = '@Html.Raw(TempData["ErrorMessage"])';
        </script>
    }


<script src="~/js/giohang.js"></script>
<script src="~/js/function.js" asp-append-version="true"></script>

</body>
</html>
